doctype html
html( lang="en" )
  head
    style.
        html {
            overflow: hidden;
            height: 100%;
            margin: 0;
            padding: 0;
        }
        body {
            height: 100%;
            overflow: auto;
            margin: 0;
            padding: 0;
            background-color: black;
        }
        canvas  {
            display: block;
            cursor: pointer;
        }
        #click-to-play-container {
            position: absolute;
            bottom: -10px;
            left: 0;
            right: 0;
            text-align: center;
        }
        #click-to-play {
            display: inline-block;
            transform: scale3d( 0.25,0.25,1 );
            animation: fadeIn cubic-bezier(0.19, 1, 0.22, 1) 2s;
            animation-iteration-count: 1;
        }

        #click-to-play.has-clicked {
            animation: fadeOut cubic-bezier(0.19, 1, 0.22, 1) 1s;
            animation-iteration-count: 1;
            animation-fill-mode: forwards;
        }

        @keyframes fadeIn {
          0% {
            opacity:0;
          }
          100% {
            opacity:1;
          }
        }

        @keyframes fadeOut {
          0% {
            opacity:1;
          }
          100% {
            opacity:0;
          }
        }



